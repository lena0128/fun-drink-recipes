<div class="form">

<%= form_for @ingredient do |f| %>

   <%= f.label "Name:" %><br>
   <%= f.text_field :name %>
   <br><br>   
   
   <%= f.label "Submit an image url:" %><br>
   <%= f.text_field :image %>
   <br><br>
   
   <%= f.label "Description:" %><br>
   <%= f.text_area :description, cols: 30, rows: 10 %>
   <br><br>
   
   <%= f.label "Alcohol? " %>
   <%= f.select :alcohol, ["yes", "no"], prompt: "Please select" %>
   <br><br>

   <%= f.submit %>
   <br><br>

  <%end%> 

</div> 