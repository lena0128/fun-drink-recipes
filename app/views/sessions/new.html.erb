<div class="container">
  <h3>Log In</h3>

  <p id="flash"><%= flash[:message] %></p>
  
  <div class="form">
    <%= form_for :user do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
        <br><br>
        <%= f.submit "Log In", class: "btn btn-sm" %>
        <%end%>
        <br>

  </div>
  
</div>