<%= form_for @drink do |f| %>
    <%= f.label "Drink Name" %>
    <%= f.text_field :drink_name %>
    <br>
    <%= f.label "Select an ingredient and measurement" %><br>
    <%= f.fields_for :measurements do |m| %>
        <%= m.collection_select :ingredient_id, Ingredient.all, :id, :name, prompt: "Please select" %>
        <%= m.label "measurement" %>
        <%= m.text_field :measure %>
    <%end%>    
    <br><br>
    <%= f.submit %>
<%end%>   