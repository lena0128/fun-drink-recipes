<div class="container">

<h3>Create a New Measurement</h3>

<%= render partial: "application/errors", locals: {errors: @measurement.errors.full_messages } %>

<div class="form">
<%= form_for(@measurement, url: drink_measurements_path(@drink)) do |f| %>
    <% if !@drink %>
      <%= f.label "Select an drink" %>
      <%= f.collection_select :drink_id, Drink.all, :id, :drink_name, prompt: "Please select" %><br>
    <%end%>
    <%= f.label "Select an ingredient" %>
    <%= f.collection_select :ingredient_id, @ingredients, :id, :name, prompt: "Please select" %>
    <%= f.label :measurement %>
    <%= f.text_field :measure %>
    <br><br>
    <%= f.submit "Add Measurement" %>
<%end%>    

</div>

</div>