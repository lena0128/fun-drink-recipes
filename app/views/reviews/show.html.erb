<div class="container">

<p id="flash"><%= flash[:message] %></p>

  <small><b><%= @review.user.username %></b></small> 
  <br>
  <%= @review.rating %> 
  <br>
  <%= @review.content %>
  <br>
  <p><small>Reviewed on: <%= @review.updated_at.strftime("%B %d, %Y") %></small></p>

  <% if @ingredient %>
  <%= link_to "Return to #{@ingredient.name}", ingredient_path(@ingredient), class: "btn btn-info btn-sm" %>
  <%else%>
  <button type="button", class="btn btn-info btn-sm"><%= button_to "Delete", @review, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: 'btn btn-info btn-sm' %></button>
  <button type="button", class="btn btn-info btn-sm"><%= link_to "Return", user_path(current_user), class: "btn btn-info btn-sm" %></button>
  <%end%>
</div>